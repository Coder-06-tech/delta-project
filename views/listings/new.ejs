<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <br><br>
        <h3>Enter details of listing:</h3>
        <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" type="text" class="form-control" placeholder="Add a catchy title" required>
                <div class="invalid-feedback">Please enter a valid title</div>
            </div>
           
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a valid description</div>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <input name="listing[image][url]" type="file" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select class="form-select">
                    <option selected>Select</option>
                    <option value="1">Mountains</option>
                    <option value="2">Castles</option>
                    <option value="3">Pools</option>
                    <option value="4">Camping</option>
                    <option value="5">Farms</option>
                    <option value="6">Arctic</option>
                    <option value="7">Domes</option>
                    <option value="8">Boats</option>
                </select>
            </div>

            <div class="row">

                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="1200" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid price</div>
                </div>
                
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid country</div>
                </div>
                
            </div> 

            <div class="mb-3">
                
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="Puri, Odisha" type="text" class="form-control"
                required>
            </div>
            
            <br>
            <br>
            <button class="btn btn-dark add-btn mt-3">Add</button>
            <br><br>
        </form>
    </div>
</div>    
